@model MyApplication.Models.ViewModels.AzerbaijanModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Azerbaijan</title>
</head>
<body>
    <nav>
        <div class="container">

            <div class="navbar">

                <a href="#" id="menu-icon"> <i class="fas fa-bars"></i> </a>

                <a href="/About"> Haqqımızda </a>

                <a href="/Azerbaijan"> Azərbaycan </a>

                <a href="/Service"> Xidmətlər </a>

                <a href="/Event"> Coming Events </a>

                <a href="/OnlinePayment"> Online Odəniş </a>

                <a href="/Contact">
                    Əlaqə
                </a>


                <li class="sign">
                    <a href="https://www.facebook.com">
                        <i class="fab fa-facebook"></i>
                    </a>
                    <a href="https://www.instagram.com">
                        <i class="fab fa-instagram"></i>
                    </a>
                </li>

            </div>
        </div>
    </nav>

    <!--Slider Begin-->
    <div class="row2">

        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="images/@Model.AzeTitleSubtitle.FirstSlide" alt="First slide">
                    <div class="slideTitle">@Model.AzeTitleSubtitle.FirstSlideText</div>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="images/@Model.AzeTitleSubtitle.SecondSlide" alt="Second slide">
                    <div class="slideTitle"> @Model.AzeTitleSubtitle.SecondSlideText </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="images/@Model.AzeTitleSubtitle.ThirdSlide" alt="Third slide">
                    <div class="slideTitle"> @Model.AzeTitleSubtitle.ThirdSlideText </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

    </div>

    <!---End Slider-->

    <div class="clearfix">
    </div>

    <main>
        <section id="subMain">
            <div class="container">
                <div class="proposalTitle">
                    @Model.AzeTitleSubtitle.Title
                </div>

                <div class="proposalSubTitle">
                    @Model.AzeTitleSubtitle.SubTitle
                </div>

            </div>
        </section>
    </main>
    <section id="cruiz">
        <div class="container">
            <div class="row">


                @foreach (var item in Model.Azerbaijans)
                {
                    <div class="col-lg-4">
                        <img src="~/images/@item.TourImage">
                        <i class="fas @item.TourIcon"></i>
                        <i id="secondRate" class="fas @item.TourIcon"></i>
                        <i id="thirdRate" class="fas @item.TourIcon"></i>
                        <h4> @item.TourName </h4>
                        <span class="Quba"> @item.TourTitle </span>
                        <i class="@item.TourTime"></i>

                        <span class="text"> @item.TourDuration </span>

                        <a href="@item.TourAction"><button> Daha Ətraflı</button></a>
                    </div>
                }

            </div>
        </div>
    </section>
    @section script {
        <script>
            $(document).ready(function () {
                $.ajax({
                    url: "/Home/Footer",
                    method: "get",
                    success: function (re) {

                        $(".same").append(re.addreses);
                        $(".sameTwo").append(re.faxes);
                        $(".sameThree").append(re.numbers);
                        $(".sameFour").append(re.mails);
                        $(".sameFive").append(re.siteadress);
                        $("#titleee").append(re.title);
                        $(".longText").append(re.desciption);
                    }
                })
            })

        </script>
    }
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js"></script>
</body>
</html>

@model MyApplication.Models.Incoming

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Create Incoming Tour</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TourImage" class="control-label"></label>
                <input id="tourimage" accept="image/*" name="TourImage" type="file" class="form-control" />
                <span asp-validation-for="TourImage" class="text-danger"></span>
            </div>
            <img id="photo" style="display:none; max-width:100%" />
            <div class="form-group">
                <label asp-for="TourIcon" class="control-label"></label>
                <input asp-for="TourIcon" class="form-control" />
                <span asp-validation-for="TourIcon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TourName" class="control-label"></label>
                <input asp-for="TourName" class="form-control" />
                <span asp-validation-for="TourName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TourTitle" class="control-label"></label>
                <input asp-for="TourTitle" class="form-control" />
                <span asp-validation-for="TourTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TourTime" class="control-label"></label>
                <input asp-for="TourTime" class="form-control" />
                <span asp-validation-for="TourTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TourAction" class="control-label"></label>
                <input asp-for="TourAction" class="form-control" />
                <span asp-validation-for="TourAction" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServiceId" class="control-label"></label>
                <select asp-for="ServiceId" class="form-control" asp-items="ViewBag.ServiceId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Duration" class="control-label"></label>
                <input asp-for="Duration" class="form-control" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TourId" class="control-label"></label>
                <select asp-for="TourId" class="form-control" asp-items="ViewBag.TourId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<script>

    tourimage.addEventListener("change", function (e) {
        var r = new FileReader();

        r.readAsDataURL(e.target.files[0])

        r.onloadend = function () {
            photo.style.display = "block";

            photo.src = r.result;

        }

    });
</script>